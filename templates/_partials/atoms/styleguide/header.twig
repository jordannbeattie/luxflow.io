{% if copy is defined and copy is not empty %}
	<section id="{{ id ?? '' }}" class="{{ variation is defined and variation == true ? "bg-primary-300 py-5" : "bg-primary-400 py-10" }}" x-data="{ showHelp: false }">
		
        <div class="flex items-center justify-center max-w-md pl-4 pr-8 mx-auto text-white sm:max-w-lg sm:px-6 lg:max-w-7xl lg:px-8 gap-x-4">
			
            <h1 class="text-4xl font-medium leading-10 tracking-tight text-center font-heading sm:text-5xl sm:leading-none lg:text-6xl">
				{{ copy }}
            </h1>
            
            {% if help is defined and help is not empty %}
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 hover:cursor-pointer" viewBox="0 0 20 20" fill="currentColor" x-on:click="showHelp = ! showHelp">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
            {% endif %}
            
		</div>

        {% if help is defined and help is not empty %}
            <div class="w-1/3 px-2 py-4 mx-auto mt-4 text-center text-neutral-800 bg-neutral-200 rounded max-w-1/3" x-show="showHelp">
                {{ help }}
            </div>
        {% endif %}

	</section>
{% endif %}
