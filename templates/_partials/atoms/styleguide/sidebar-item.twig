<a href="#{{ link ?? '' }}" class="flex items-center w-full {{ variation is defined and variation == true ? "pr-8 pl-12" : "px-8" }} bg-neutral-50 py-2 align-middle transition hover:bg-neutral-100 border-r-4 border-neutral-50 hover:border-primary-400">      

    <span class="flex-1 text-base font-normal text-neutral-500 hover:text-neutral-600">
        {{ copy ?? "" }}
    </span>

    {% if dynamic is not defined or (dynamic is defined and dynamic != true) %}
        <span class="w-2 h-2 rounded-full bg-primary-400"></span>
    {% endif %}
    
</a>
