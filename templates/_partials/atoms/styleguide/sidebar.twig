{# Floating sidebar Toggle #}
<div class="fixed z-40 invisible px-4 pt-4 md:visible hover:cursor-pointer" x-show="!sidebar" x-on:click="toggleSidebar()" x-cloak>
	<div class="p-4 rounded-full shadow-md text-neutral-800 bg-neutral-50">
		<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
			<path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h7" />
		</svg>
	</div>
</div>

{# Sidebar #}
<div x-show="sidebar" x-cloak>
	<div class="min-h-screen overflow-y-auto bg-neutral-50 md:flex md:w-64 md:flex-col md:fixed md:inset-y-0">
		<div class="py-12">

			{% if headline is defined and headline is not empty %}
				<div class="flex flex-row items-center px-8 pb-8">
					<h2 class="flex-1 text-2xl font-bold font-heading text-neutral-800">
						{{ headline }}
					</h2>
                    <div x-on:click="toggleSidebar()" class="flex-1 hover:cursor-pointer">
						<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
						</svg>
                    </div>
				</div>
			{% endif %}

			<nav class="flex flex-col items-start">
				{{ children }}
			</nav>

		</div>
	</div>
</div>
