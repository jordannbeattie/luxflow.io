{% x:styleguide/section { headline: 'Colour Palette' } %}
    <div class="flex flex-col gap-10 xl:gap-16">

		{# Neutral #}
		{% if neutral is defined and neutral is not empty %}
			<div class="flex flex-col gap-2 md:gap-4">

				<h2 class=" h3 text-neutral-700 dark:text-neutral-200">
					Neutral
				</h2> 

				<div class="flex flex-row gap-8 md:gap-12 xl:gap-16">
					<div class="w-16 h-16 shadow-sm rounded-none shadow-neutral-400/25 md:w-24 md:h-24 xl:w-32 xl:h-32 bg-neutral-100">
						<span class="grid w-full h-full text-xs font-semibold transition opacity-0 hover:opacity-100 cursor-copy text-neutral-800 md:text-sm xl:text-base shade-copy place-items-center">
							{{ neutral ?? "" }}
						</span>
					</div>

					<div class="flex gap-0 overflow-hidden shadow-sm rounded-none shadow-neutral-400/25">
						<div class="w-8 h-16 md:w-12 md:h-24 xl:w-16 xl:h-32 bg-neutral-50"><span class="grid w-full h-full font-bold transition opacity-0 cursor-copy shade-copy hover:opacity-100 place-items-center body-md text-neutral-700">50</span></div>
						<div class="w-8 h-16 md:w-12 md:h-24 xl:w-16 xl:h-32 bg-neutral-100"><span class="grid w-full h-full font-bold transition opacity-0 cursor-copy shade-copy hover:opacity-100 place-items-center body-md text-neutral-700">100</span></div>
						<div class="w-8 h-16 md:w-12 md:h-24 xl:w-16 xl:h-32 bg-neutral-200"><span class="grid w-full h-full font-bold transition opacity-0 cursor-copy shade-copy hover:opacity-100 place-items-center body-md text-neutral-700">200</span></div>
						<div class="w-8 h-16 md:w-12 md:h-24 xl:w-16 xl:h-32 bg-neutral-300"><span class="grid w-full h-full font-bold transition opacity-0 cursor-copy shade-copy hover:opacity-100 place-items-center body-md text-neutral-700">300</span></div>
						<div class="w-8 h-16 md:w-12 md:h-24 xl:w-16 xl:h-32 bg-neutral-400"><span class="grid w-full h-full font-bold transition opacity-0 cursor-copy shade-copy hover:opacity-100 place-items-center body-md text-neutral-700">400</span></div>
						<div class="w-8 h-16 md:w-12 md:h-24 xl:w-16 xl:h-32 bg-neutral-500"><span class="grid w-full h-full font-bold transition opacity-0 cursor-copy shade-copy hover:opacity-100 place-items-center body-md text-neutral-50">500</span></div>
						<div class="w-8 h-16 md:w-12 md:h-24 xl:w-16 xl:h-32 bg-neutral-600"><span class="grid w-full h-full font-bold transition opacity-0 cursor-copy shade-copy hover:opacity-100 place-items-center body-md text-neutral-50">600</span></div>
						<div class="w-8 h-16 md:w-12 md:h-24 xl:w-16 xl:h-32 bg-neutral-700"><span class="grid w-full h-full font-bold transition opacity-0 cursor-copy shade-copy hover:opacity-100 place-items-center body-md text-neutral-50">700</span></div>
						<div class="w-8 h-16 md:w-12 md:h-24 xl:w-16 xl:h-32 bg-neutral-800"><span class="grid w-full h-full font-bold transition opacity-0 cursor-copy shade-copy hover:opacity-100 place-items-center body-md text-neutral-50">800</span></div>
						<div class="w-8 h-16 md:w-12 md:h-24 xl:w-16 xl:h-32 bg-neutral-900"><span class="grid w-full h-full font-bold transition opacity-0 cursor-copy shade-copy hover:opacity-100 place-items-center body-md text-neutral-50">900</span></div>
					</div>
				</div>

			</div>
		{% endif %}

