{% x:styleguide/section { headline: 'Inputs' } %}
<div class="flex flex-col flex-wrap gap-8 md:gap-16 md:flex-row">

	{# Text Inputs #}
	<div class="flex flex-col items-start w-full gap-8 md:w-80">

		<div class="flex ">
			<div class="flex-1">
				<h4 class=" h4 text-neutral-900 dark:text-neutral-50">Text Inputs</h4>
			</div>
		</div>

        {# Textbox #}
        <div class="min-w-full">
            <label for="full_name" class="input-label">Text Box Example</label>
            <div class="mt-1">
                <input type="text" name="first_name" id="full_name" autocomplete="name" class="input-text">
            </div>
        </div>

        {# Text Area #}
        <div class="min-w-full">
            <label for="message" class="input-label">Text Area Example</label>
            <div class="mt-2">
                <textarea id="message" name="message" rows="4" class="input-text"></textarea>
            </div>
        </div>

    </div>

	{# Dropdown #}
	<div class="flex flex-col items-start w-full gap-8 md:w-64">

		<div class="flex ">
			<div class="flex-1">
				<h4 class=" h4 text-neutral-900 dark:text-neutral-50">Dropdown</h4>
			</div>
		</div>

        {# Dropdown #}
        <div class="w-full">
            <label for="dropdown" class="input-label">Dropdown Example</label>
            <div class="mt-1">
                <select id="dropdown" name="dropdown" class="input-dropdown">
                    <option>Item One</option>
                    <option selected>Item Two</option>
                    <option>Item Three</option>
                </select>
            </div>
        </div>

    </div>

	{# Selectors #}
	<div class="flex flex-col items-start gap-8">

		<div class="flex ">
			<div class="flex-1">
				<h4 class=" h4 text-neutral-900 dark:text-neutral-50">Selectors</h4>
			</div>
		</div>

        {# Checkbox #}
        <div class="">
            <div class="mb-1">
                <h5 class="input-label">Checkbox</h5>
            </div>

            <fieldset class="space-y-4">
                {% for i in 1..2 %}
                    <div class="flex items-center gap-4">
                        <input id="test-one-{{ i }}" aria-describedby="test-one-{{ i }}-description" name="test-one" type="checkbox" class="input-checkbox">
                        <label for="test-one-{{ i }}" class="input-selector-label">Checkbox Example {{ i }}</label>
                    </div>
                {% endfor %}
            </fieldset>

        </div>

        {# Radio Button #}
        <div class="">
            <div class="mb-1">
                <h5 class="input-label">Radio Input</h5>
            </div>
            <fieldset class="space-y-4">
                {% for i in 1..2 %}
                    <div class="flex items-center gap-4">
                        <input id="test-two-{{ i }}" aria-describedby="test-two-{{ i }}-description" name="test-two" type="radio" class="input-radio">
                        <label for="test-two-{{ i }}" class="input-selector-label">Radio Input Example {{ i }}</label>
                    </div>
                {% endfor %}
            </fieldset>
        </div>

    </div>

</div>
{% endx:styleguide/section %}